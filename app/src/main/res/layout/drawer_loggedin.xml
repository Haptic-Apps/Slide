<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/card_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="160dp"
        android:background="@color/md_light_blue_500">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-20dp"
            android:padding="57dp"
            android:theme="@style/Ripple.List"
            app:srcCompat="@drawable/slogo" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:text="@string/drawer_hello"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-27dp"
            android:layout_toRightOf="@+id/welcome"
            android:padding="16dp"
            android:text="ccrama"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            app:srcCompat="@drawable/down"
            android:layout_margin="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_height="30dp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/accountsarea"
        android:background="?attr/activity_background"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="?android:selectableItemBackground"
            android:paddingLeft="18dp"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:text="@string/drawer_add_account"
            android:textSize="14sp" />


    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/prof_click"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:background="?android:selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="26dp"
            app:srcCompat="@drawable/profile"
            android:tint="?attr/tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/drawer_profile"
            android:textColor="?attr/font"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/expand_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="5">


        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:text="@string/profile_yours"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/saved"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="?android:selectableItemBackground"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:text="@string/profile_saved"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="?android:selectableItemBackground"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:text="@string/btn_submit"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/inbox"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"

        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="26dp"
            app:srcCompat="@drawable/sidebar_inbox"
            android:id="@+id/inb"
            android:tint="?attr/tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/inb"
            android:text="@string/title_inbox"

            android:textColor="?attr/font"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:id="@+id/count"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#fff"

            android:layout_alignParentRight="true"
            android:background="@drawable/roundedback"
            android:layout_centerVertical="true"
            android:layout_height="28dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mod"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"

        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="26dp"
            app:srcCompat="@drawable/mod"
            android:tint="?attr/tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/drawer_moderation"

            android:textColor="?attr/font"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/multi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"

        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="26dp"
            app:srcCompat="@drawable/collection"
            android:tint="?attr/tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/title_multireddits"

            android:textColor="?attr/font"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="26dp"
            app:srcCompat="@drawable/crown"
            android:tint="?attr/tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="@string/drawer_support"
            android:textColor="?attr/font"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="26dp"
            app:srcCompat="@drawable/profile"
            android:tint="?attr/tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="@string/drawer_goto_profile"
            android:textColor="?attr/font"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="26dp"
            app:srcCompat="@drawable/settings"
            android:tint="?attr/tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="@string/title_settings"
            android:textColor="?attr/font"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="?attr/tint"
        android:hint="@string/drawer_search"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textColor="?attr/font"
        android:textColorHint="?attr/font"
        android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM_"/>
</LinearLayout>
