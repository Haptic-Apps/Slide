<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:background="?attr/card_background"
    android:animateLayoutChanges="true"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="20dp"

        android:background="@color/md_light_blue_500">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-20dp"
            android:padding="57dp"
            android:src="@drawable/slogo" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:text="@string/drawer_welcome"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-27dp"
            android:layout_toRightOf="@+id/welcome"
            android:padding="16dp"
            android:text="ccrama"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:background="?android:selectableItemBackground"

            android:text="@string/drawer_login"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expand"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            xmlns:android="http://schemas.android.com/apk/res/android">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/drawer_profile"
                android:textAllCaps="true"
                android:padding="16dp"
                android:textColor="?attr/font"

                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:id="@+id/expand_profile"
        android:weightSum="5"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="?attr/tint"

                android:paddingBottom="6dp"
                android:background="?android:selectableItemBackground"


                android:paddingTop="6dp"
                android:src="@drawable/sidebar_profile" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/saved"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:gravity="center"

            android:orientation="horizontal"
    >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="match_parent"

                android:tint="?attr/tint"
                android:background="?android:selectableItemBackground"

                android:paddingBottom="6dp"


                android:paddingTop="6dp"
                android:src="@drawable/sidebar_saved" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/upvoted"
            android:layout_width="0dp"
            android:layout_weight="1"            android:layout_height="42dp"

            android:orientation="horizontal"
            android:paddingLeft="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingBottom="6dp"
                android:background="?android:selectableItemBackground"

                android:tint="?attr/tint"

                android:paddingTop="6dp"
                android:src="@drawable/upvotedarker" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/inbox"
            android:layout_width="0dp"
            android:layout_weight="1"            android:layout_height="42dp"

            android:orientation="horizontal"
            android:paddingLeft="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingBottom="6dp"

                android:tint="?attr/tint"
                android:background="?android:selectableItemBackground"


                android:paddingTop="6dp"
                android:src="@drawable/sidebar_inbox" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_weight="1"            android:layout_height="42dp"

            android:orientation="horizontal"
            android:paddingLeft="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingBottom="6dp"
                android:background="?android:selectableItemBackground"

                android:tint="?attr/tint"

                android:paddingTop="6dp"
                android:src="@drawable/edit" />

        </LinearLayout>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:alpha=".5"
        android:background="?attr/tint"
        />




    <LinearLayout
        android:id="@+id/multi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"

        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"

            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/collection" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="?attr/font"

            android:text="@string/drawer_multis"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/support" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="@string/drawer_support"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tablet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/multicolumn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="@string/drawer_grid"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="@string/drawer_goto_profile"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="@string/drawer_settings"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:alpha=".25" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/sort"
        android:textColor="?attr/font"
        android:textColorHint="?attr/font"
        android:hint="Search for a subreddit"
        android:singleLine="true"

        android:layout_marginLeft="16dp"
        android:imeOptions="actionSearch"

        android:backgroundTint="?attr/tint"
        android:layout_marginRight="16dp"


        android:layout_height="wrap_content" />
</LinearLayout>
