<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    android:background="?attr/card_background"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/md_light_blue_500"
    android:layout_marginBottom="20dp"
    android:id="@+id/back"

    android:layout_height="160dp">
<ImageView
    android:layout_width="match_parent"
    android:padding="57dp"
    android:layout_marginTop="-20dp"
    android:src="@drawable/slogo"
    android:layout_height="match_parent" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/profile"
        android:background="?android:selectableItemBackground"

        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:layout_height="48dp">
        <ImageView
            android:layout_width="48dp"
            android:paddingLeft="10dp"
            android:tint="?attr/tint"

            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/sidebar_profile"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Add an account"
            android:textColor="?attr/font"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/support" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="Support slide"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tablet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/multicolumn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="Grid layout"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:id="@+id/prof"
        android:background="?android:selectableItemBackground"

        android:layout_height="48dp">
        <ImageView
            android:layout_width="48dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:tint="?attr/tint"

            android:src="@drawable/user"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/font"

            android:textStyle="bold"
            android:text="Go to profile"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="Settings"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".25"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/sort"
        android:textColor="?attr/font"
        android:textColorHint="?attr/font"
        android:hint="Search for a subreddit"
        android:singleLine="true"

        android:layout_marginLeft="16dp"
        android:imeOptions="actionSearch"

        android:backgroundTint="?attr/tint"
        android:layout_marginRight="16dp"


        android:layout_height="wrap_content" />
</LinearLayout>