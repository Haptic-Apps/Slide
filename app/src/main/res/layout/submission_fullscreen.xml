<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:gravity="center"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"
        android:background="?attr/card_background"
        android:gravity="center"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/imagearea"
                android:layout_width="match_parent"
                android:background="?android:selectableItemBackground"


                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/leadimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chameleon" />

                <LinearLayout
                    android:id="@+id/base"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/leadimage"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/slightshadow"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp">

                    <TextView
                        android:id="@+id/textimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/example_domain"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/subtextimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".56"

                        android:text="@string/example_url"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />
                </LinearLayout>


            </RelativeLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="horizontal">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"


                    >

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="16dp">
                            <com.wefika.flowlayout.FlowLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha=".6"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/subreddit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:gravity="center_vertical"
                                    android:paddingRight="5dp"
                                    android:text="@string/example_sub"

                                    android:textColor="?attr/font"
                                    android:textSize="?attr/font_cardinfo"

                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/information"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:gravity="center_vertical"
                                    android:text="@string/example_time"
                                    android:textColor="?attr/font"

                                    android:textSize="?attr/font_cardinfo" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="?attr/font_cardinfo"
                                    android:text="@string/thread_properties_seperator"
                                    android:textColor="?attr/font"

                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:textColor="?attr/font"

                                    android:gravity="center_vertical"
                                    android:text="@string/example_points_short"
                                    android:textStyle="bold"

                                    android:textSize="?attr/font_cardinfo" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="?attr/font_cardinfo"
                                    android:text="@string/thread_properties_seperator"
                                    android:textColor="?attr/font"

                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/comments"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:textColor="?attr/font"

                                    android:gravity="center_vertical"
                                    android:text="@string/example_comments"

                                    android:textSize="?attr/font_cardinfo" />

                            </com.wefika.flowlayout.FlowLayout>
                            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="@string/example_title"
                                android:textColor="?attr/font"
                                android:textSize="?attr/font_cardtitle" />





                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/previewContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">


                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >

                            <ImageView
                                android:id="@+id/menu"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:visibility="gone"
                                android:layout_alignParentRight="true"

                                android:padding="8dp"
                                android:src="@drawable/more" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxHeight="82dp"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:background="?android:selectableItemBackground"

                                android:paddingTop="16dp">

                                <ImageView
                                    android:id="@+id/thumbimage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="8dp"
                                    android:adjustViewBounds="true"
                                    android:maxWidth="60dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/chameleon" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"

                                    android:layout_gravity="center_vertical"

                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/contenttitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/example_domain"
                                        android:textColor="?attr/font"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/contenturl"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:alpha=".56"

                                        android:text="@string/example_url"
                                        android:textColor="?attr/font"
                                        android:textSize="14dp" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/body_area"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="16dp"
                            android:textColor="?attr/font"
                            android:alpha=".5"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            />
                    <me.ccrama.redditslide.ActiveTextView
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/body"
                        android:paddingBottom="8dp"

                        android:textColor="?attr/font"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"

                        android:layout_height="wrap_content" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="8dp"

                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <include
                            android:id="@+id/nsfw"
                            layout="@layout/nsfw"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_height="wrap_content"

                            />

                        <include
                            android:id="@+id/pinned"
                            layout="@layout/stickied"
                            android:layout_centerVertical="true"

                            android:layout_toRightOf="@+id/nsfw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"

                            android:src="@drawable/pinned" />
                        <include
                            android:id="@+id/flairbubble"
                            layout="@layout/flair"
                            android:layout_toRightOf="@+id/pinned"
                            android:layout_centerVertical="true"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"

                            android:src="@drawable/pinned" />
                        <ImageView
                            android:id="@+id/more"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="?attr/tint"
                            android:background="?android:selectableItemBackground"

                            android:layout_alignParentRight="true"
                            android:padding="8dp"
                            android:src="@drawable/more" />

                        <ImageView
                            android:id="@+id/upvote"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_toLeftOf="@+id/more"
                            android:tint="?attr/tint"
                            android:background="?android:selectableItemBackground"


                            android:padding="8dp"
                            android:src="@drawable/upvoted" />
                        <ImageView
                            android:id="@+id/reply"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="?attr/tint"
                            android:background="?android:selectableItemBackground"

                            android:layout_toLeftOf="@+id/downvote"
                            android:padding="8dp"
                            android:src="@drawable/reply" />
                        <ImageView
                            android:id="@+id/downvote"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="?android:selectableItemBackground"

                            android:layout_toLeftOf="@+id/upvote"
                            android:padding="8dp"
                            android:tint="?attr/tint"

                            android:src="@drawable/downvote" />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/innerSend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                        android:orientation="vertical"
                        android:padding="16dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/replyLine"
                            android:textColor="?attr/font"
                            android:hint="Reply"
                            android:textColorHint="?attr/font"
                            android:backgroundTint="?attr/tint"
                            android:imeOptions="actionDone|flagNoEnterAction"
                            android:inputType="textMultiLine|textAutoCorrect|textCapSentences"
                            android:minHeight="30dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:textColor="?attr/font"
                                android:background="?android:selectableItemBackground"

                                android:id="@+id/discard"
                                android:text="DISCARD"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:id="@+id/send"
                                android:textColor="?attr/font"
                                android:background="?android:selectableItemBackground"

                                android:padding="4dp"
                                android:text="@string/thread_reply_submit"

                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/innersend2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha=".56"
                            android:layout_marginLeft="-6dp"
                            android:layout_marginRight="-6dp"

                            android:gravity="center"
                            android:orientation="horizontal"

                            android:weightSum="8">

                            <ImageButton
                                android:id="@+id/imagerep"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:height="48dp"
                                android:background="#00000000"
                                android:cropToPadding="false"
                                android:tint="?attr/tint"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_insert_photo_white_48dp" />


                            <ImageButton
                                android:id="@+id/link"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:tint="?attr/tint"

                                android:layout_weight="1"
                                android:height="48dp"
                                android:background="#00000000"
                                android:cropToPadding="false"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/link" />

                            <ImageButton
                                android:id="@+id/bold"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:height="48dp"
                                android:tint="?attr/tint"

                                android:background="#00000000"
                                android:cropToPadding="false"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_format_bold_white_48dp" />

                            <ImageButton
                                android:id="@+id/italics"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:tint="?attr/tint"

                                android:layout_weight="1"
                                android:height="48dp"
                                android:background="#00000000"
                                android:cropToPadding="false"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_format_italic_white_48dp" />

                            <ImageButton
                                android:id="@+id/bulletlist"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:height="48dp"
                                android:background="#00000000"
                                android:tint="?attr/tint"

                                android:cropToPadding="false"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_format_list_bulleted_white_48dp" />

                            <ImageButton
                                android:id="@+id/numlist"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:height="48dp"
                                android:tint="?attr/tint"

                                android:background="#00000000"
                                android:cropToPadding="false"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_format_list_numbered_white_48dp" />

                            <ImageButton
                                android:id="@+id/quote"
                                android:tint="?attr/tint"

                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:height="48dp"
                                android:background="#00000000"
                                android:cropToPadding="false"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_format_quote_white_48dp" />

                            <ImageButton
                                android:id="@+id/size"
                                android:tint="?attr/tint"

                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:height="48dp"
                                android:background="#00000000"
                                android:cropToPadding="false"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_format_size_white_48dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
