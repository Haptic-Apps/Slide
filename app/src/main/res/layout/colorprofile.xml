<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/card_background"
        app:cardCornerRadius="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_light_green_500"
                android:padding="24dp"
                android:text="/r/Android"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/body"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"

                    android:paddingTop="8dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"

                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"


                            android:id="@+id/linkkarma"
                            android:text="43015"
                            android:textStyle="bold"
                            android:textColor="?attr/font"

                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="?attr/font"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"


                            android:text="link karma"

                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/wiki"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"

                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="?attr/font"

                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"


                            android:id="@+id/commentkarma"
                            android:text="2034"
                            android:textStyle="bold"

                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="?attr/font"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"


                            android:text="comment karma"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:alpha=".8"
                        android:background="?attr/tint" />

                    <LinearLayout
                        android:id="@+id/pm"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:background="?android:selectableItemBackground"

                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:alpha=".86"
                            android:tint="?attr/tint"
                            android:padding="12dp"
                            android:src="@drawable/send" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:textColor="?attr/font"

                            android:text="Private message"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/color"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:background="?android:selectableItemBackground"

                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:tint="?attr/tint"
                            android:layout_height="match_parent"
                            android:alpha=".86"
                            android:id="@+id/colorExpandFrom"
                            android:padding="12dp"
                            android:src="@drawable/color" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:textColor="?attr/font"

                            android:text="@string/theme_subreddit_color"

                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="24dp"
                    android:layout_alignTop="@+id/body"
                    android:layout_alignBottom="@+id/body"
                    android:id="@+id/body2"

                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="?attr/card_background">

                    <uz.shift.colorpicker.LineColorPicker xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/picker"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:orientation="horizontal"

                        app:selectedColorIndex="0" />

                    <uz.shift.colorpicker.LineColorPicker xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/picker2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/picker"

                        android:layout_marginTop="8dp"
                        app:orientation="horizontal"
                        app:selectedColorIndex="5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="OK"
                        android:textSize="14dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/ok"
                        android:textStyle="bold"
                        android:padding="16dp"
                        android:textColor="?attr/font"
                        android:background="?android:selectableItemBackground"

                        android:gravity="right|bottom"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>
