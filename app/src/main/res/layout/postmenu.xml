<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/card_background"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/md_light_green_500"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="24dp"
                android:text="Post title here"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"

                    android:paddingTop="8dp">


                    <LinearLayout
                        android:id="@+id/sidebar"
                        android:layout_width="match_parent"

                        android:layout_height="48dp"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"

                        android:orientation="horizontal"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:alpha=".86"

                            android:padding="12dp"

                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/profile" />

                        <TextView
                            android:id="@+id/userpopup"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center_vertical"
                            android:text="/u/ccrama"
                            android:textColor="?attr/font"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wiki"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?android:selectableItemBackground"

                        android:gravity="center_vertical"

                        android:orientation="horizontal"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"

                            android:alpha=".86"
                            android:padding="12dp"

                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/sub" />

                        <TextView
                            android:id="@+id/subpopup"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center_vertical"
                            android:text="/r/Android"

                            android:textColor="?attr/font"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?android:selectableItemBackground"

                        android:gravity="center_vertical"

                        android:orientation="horizontal"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:alpha=".86"
                            android:padding="12dp"
                            android:tint="?attr/tint"

                            app:srcCompat="@drawable/iconstarfilled" />

                        <TextView
                            android:id="@+id/savedtext"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center_vertical"

                            android:text="@string/submission_save"

                            android:textColor="?attr/font"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gild"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"

                        android:orientation="horizontal"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:alpha=".86"
                            android:padding="12dp"

                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/openexternal" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:text="@string/submission_gild"

                            android:textColor="?attr/font"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/report"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"

                        android:paddingEnd="16dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:alpha=".86"
                            android:padding="12dp"

                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/report" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:text="@string/submission_report"

                            android:textColor="?attr/font"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/copy"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"

                        android:orientation="horizontal"
                        android:paddingEnd="16dp">
                        
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:alpha=".86"
                            android:padding="12dp"
                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/ic_content_copy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/misc_copy_text"
                            android:textColor="?attr/font"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"

                        android:orientation="horizontal"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:alpha=".86"
                            android:padding="12dp"
                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/share" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="@string/submission_share"


                            android:textColor="?attr/font"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hide"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"

                        android:orientation="horizontal"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:alpha=".86"
                            android:padding="12dp"
                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/hide" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="@string/submission_hide"


                            android:textColor="?attr/font"

                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                     >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:alpha=".86"
                            android:padding="12dp"
                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/commentchange" />


                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:alpha=".86"
                            android:padding="12dp"
                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/downvote" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:alpha=".86"
                            android:padding="12dp"
                            android:tint="?attr/tint"
                            app:srcCompat="@drawable/upvoted" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
