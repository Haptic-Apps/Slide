<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#aa000000"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/gifarea"
        android:gravity="center">

        <me.ccrama.redditslide.Views.MediaVideoView
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

        </me.ccrama.redditslide.Views.MediaVideoView>

        <FrameLayout
            android:id="@+id/placeholder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#dc000000" />
        <ProgressBar
            android:id="@+id/gifprogress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />
    </RelativeLayout>

    <me.ccrama.redditslide.Views.SubsamplingScaleImageView
        android:id="@+id/submission_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:transitionName="profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/gifheader"
        android:gravity="right|bottom"
        android:weightSum="6">

        <ImageView
            android:id="@+id/external"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:padding="15dp"
            app:srcCompat="@drawable/openexternal"

            android:tint="@color/white" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:padding="15dp"
            app:srcCompat="@drawable/share"

            android:tint="@color/white" />

        <ImageView
            android:id="@+id/save"
            style="@style/Ripple.List"
            android:layout_width="56dp"
            android:layout_height="56dp"

            android:layout_gravity="right"
            android:padding="15dp"

            app:srcCompat="@drawable/save" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="invisible" />

</RelativeLayout>