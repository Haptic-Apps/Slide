<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/imagearea"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">

        <me.ccrama.redditslide.Views.ExoVideoView
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        </me.ccrama.redditslide.Views.ExoVideoView>

        <ProgressBar
            android:id="@+id/gifprogress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"

            android:progress="0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gifheader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/imagearea"
        android:layout_marginTop="-56dp">

        <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="16dp"
                android:gravity="center"
                android:id="@+id/size"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"
                android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/save"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="15dp"
            android:theme="@style/Ripple.List"
            android:tint="@android:color/white"
            android:layout_toLeftOf="@+id/more"
            app:srcCompat="@drawable/ic_get_app" />

        <ImageView
            android:id="@+id/more"
            style="@style/Ripple.List"
            android:layout_alignParentRight="true"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_gravity="right"
            android:paddingBottom="15dp"
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:paddingTop="15dp"
            android:theme="@style/Ripple.List"
            app:srcCompat="@drawable/ic_more_vert" />
    </RelativeLayout>

</RelativeLayout>



