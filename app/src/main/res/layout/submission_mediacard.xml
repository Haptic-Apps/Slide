<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="48dp"
    sothree:umanoOverlay="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000000"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/gifarea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">

            <me.ccrama.redditslide.Views.ExoVideoView
                android:id="@+id/gif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

            </me.ccrama.redditslide.Views.ExoVideoView>

            <FrameLayout
                android:id="@+id/placeholder"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000" />

            <ProgressBar
                android:id="@+id/gifprogress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:progress="0" />
        </RelativeLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/thumbimage2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:riv_corner_radius="2dp" />

        <me.ccrama.redditslide.Views.SubsamplingScaleImageView
            android:id="@+id/submission_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:transitionName="profile" />
        <ImageView
                android:id="@+id/type"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:layout_centerInParent="true"
                android:tint="#e1e1e1"
                />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <me.ccrama.redditslide.Views.TitleTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:text="asdf"
            android:textColor="#ffffff"
            android:textSize="?attr/font_cardtitle" />
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:text="@string/example_url"
            android:textColor="#bcffffff"
            android:textSize="14sp" />

        <me.ccrama.redditslide.Views.RevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc">


            <LinearLayout
                android:id="@+id/vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/menu"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/scoreimg"
                android:layout_width="15dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:tag="tintactionbar"
                android:tint="?attr/tintColor"
                android:contentDescription="@string/img_score"
                sothree:srcCompat="@drawable/upvoted" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textColor="?attr/tintColor"
                android:layout_below="@+id/innerrelative"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/scoreimg"
                android:gravity="center_vertical"
                android:tag="tintactionbar"
                android:text="400"
                android:textSize="?attr/font_cardinfo" />

            <ImageView
                android:id="@+id/pointsimg"
                android:layout_width="15dp"
                android:layout_height="36dp"
                android:layout_below="@+id/innerrelative"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_toRightOf="@+id/score"
                android:tag="tintactionbar"
                android:tint="?attr/tintColor"
                android:contentDescription="@string/img_comments"
                sothree:srcCompat="@drawable/commentchange" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:textColor="?attr/tintColor"
                android:layout_height="36dp"
                android:layout_below="@+id/innerrelative"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/pointsimg"
                android:gravity="center_vertical"
                android:tag="tintactionbar"
                android:text="420"
                android:textSize="?attr/font_cardinfo" />


            <ImageView
                android:id="@+id/save"
                style="@style/Ripple.List"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_below="@+id/innerrelative"

                android:layout_toLeftOf="@+id/upvote"
                android:padding="8dp"
                android:tag="tintactionbar"
                android:tint="?attr/tintColor"
                android:contentDescription="@string/btn_save"
                sothree:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/upvote"
                style="@style/Ripple.List"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_below="@+id/innerrelative"
                android:layout_toLeftOf="@+id/downvote"
                android:padding="8dp"

                android:tag="tintactionbar"
                android:tint="?attr/tintColor"
                android:contentDescription="@string/btn_upvote"
                sothree:srcCompat="@drawable/upvoted" />

            <ImageView
                android:id="@+id/downvote"
                style="@style/Ripple.List"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_below="@+id/innerrelative"

                android:layout_toLeftOf="@+id/menu"
                android:padding="8dp"
                android:tag="tintactionbar"
                android:tint="?attr/tintColor"
                android:contentDescription="@string/btn_downvote"
                sothree:srcCompat="@drawable/downvote" />


            <ImageView
                android:id="@+id/menu"
                style="@style/Ripple.List"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/innerrelative"
                android:padding="8dp"
                android:tag="tintactionbar"
                android:tint="?attr/tintColor"
                android:contentDescription="@string/btn_menu"
                sothree:srcCompat="@drawable/more" />
        </me.ccrama.redditslide.Views.RevealRelativeLayout>
    </RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
