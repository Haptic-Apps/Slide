<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="?attr/card_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"

        android:background="@color/md_light_blue_500">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-20dp"
            android:padding="57dp"
            app:srcCompat="@drawable/slogo" />

    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:orientation="horizontal"

            android:paddingStart="0dp"
            android:paddingLeft="0dp">



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"

                android:text="@string/drawer_offline"
                android:layout_marginStart="16dp"
                android:textColor="?attr/fontColor"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/online"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:orientation="horizontal"

            android:paddingStart="0dp"
            android:paddingLeft="0dp">

        <ImageView
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="26dp"
                app:srcCompat="@drawable/internet"
                android:tint="?attr/tintColor"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="@string/drawer_offline_retry"
            android:textColor="?attr/fontColor"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/manage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:orientation="horizontal"

            android:paddingStart="0dp"
            android:paddingLeft="0dp">

        <ImageView
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="26dp"
                app:srcCompat="@drawable/save"
                android:tint="?attr/tintColor"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/manage_offline_content"
            android:textColor="?attr/fontColor"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:orientation="horizontal"

            android:paddingStart="0dp"
            android:paddingLeft="0dp">

        <ImageView
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="26dp"
                app:srcCompat="@drawable/settings"
                android:tint="?attr/tintColor"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="@string/title_settings"
            android:textColor="?attr/fontColor"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:id="@+id/drawer_divider"
        android:layout_width="match_parent"
        android:background="?attr/tintColor"
        android:alpha=".25"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_height="0.75dp"
        android:visibility="gone" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="?attr/tintColor"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_.+"
            android:hint="@string/drawer_search"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="?attr/fontColor"
            android:textColorHint="?attr/fontColor" />

        <ImageView
                android:id="@+id/close_search_drawer"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:tint="?attr/tintColor"
                android:layout_alignBottom="@+id/sort"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:theme="@style/Ripple.List"
                app:srcCompat="@drawable/close"
                android:layout_marginRight="16dp"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
