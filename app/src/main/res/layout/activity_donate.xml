<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="?attr/activity_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/md_light_green_500">


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/submission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"

            android:text="Choose a donation amount"
            android:textColor="?attr/font"
            android:textSize="22sp"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/money"
                android:layout_height="match_parent"
                android:text="$4"
                android:padding="16dp"
                android:textColor="@color/md_light_green_500"
                android:textSize="26sp"
               />
        <com.rey.material.widget.Slider
            android:id="@+id/slider_sl_discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            app:sl_maxValue="20"
            app:sl_minValue="2"
            app:sl_primaryColor="@color/md_light_green_500"
            app:sl_secondaryColor="#424242"
            app:sl_stepValue="2"
            app:sl_value="4" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".5"

            android:paddingTop="18dp"
            android:text="This amount..."
            android:textAllCaps="true"
            android:textColor="?attr/font"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".6"
                android:textColor="?attr/font"
                android:text="Saves "
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/ads"
                android:layout_height="wrap_content"
                android:text="660"
                android:textColor="@color/md_light_green_500"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".6"
                android:textColor="?attr/font"
                android:text=" ads from being displayed"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supports "
                android:alpha=".6"
                android:textColor="?attr/font"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.4"
                android:textColor="@color/md_light_green_500"
                android:textSize="24sp"
                android:id="@+id/hours"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".6"
                android:textColor="?attr/font"
                android:text=" hours of development"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am a student developer, and am very grateful for your generous donations! They have helped make Slide a (free) reality :) "
                android:alpha=".6"
                android:textColor="?attr/font"
                android:textSize="18sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/donate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:padding="16dp"
            android:text="DONATE"

            android:textColor="@color/md_light_green_500"
            android:textAllCaps="true"

            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>